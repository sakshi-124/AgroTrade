<?xml version="1.0" encoding="utf-8"?>



    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/ferticardback">



        <LinearLayout
            android:id="@+id/li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">


            <ImageView
                android:id="@+id/product_img"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/agro"
                android:padding="@dimen/_3sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/_1sdp"
                >

                <TextView
                    android:id="@+id/product_crop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="vegetable_name"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="customer_name"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Customer Mob No.:"
                        android:textAlignment="center"
                        android:textColor="@color/infotext"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/customer_mobileno"
                        android:textAlignment="textStart"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:text="1230456789" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Qty:"
                        android:textAlignment="center"
                        android:textColor="@color/infotext"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/saledetail_crop_qty"
                        android:textAlignment="textStart"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:text="Quantity" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:textColor="@color/textcolor"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:text="Kg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/infotext"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:text="Total : " />

                    <TextView
                        android:id="@+id/saledetail_crop_total_amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:textColor="@color/textcolor"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:text="Total Amt" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_3sdp"
                        android:textColor="@color/textcolor"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:text="Rs."/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Placed on "
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/salemaster_crop_order_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dd/mm/yy"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Status:"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/salemaster_crop_order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="pending/delivered"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"/>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>







    </androidx.cardview.widget.CardView>


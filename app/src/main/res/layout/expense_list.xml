<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        app:cardElevation="6dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/agro"
                android:visibility="gone"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense Note"
                android:textSize="50sp"
                android:visibility="gone"
                android:textColor="@color/textcolor"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:visibility="gone"
                android:textColor="@color/textcolor"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                        <TextView
                            android:id="@+id/textViewF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/infotext"
                            android:text="@string/expferti"
                            android:textSize="18dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:id="@+id/f_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expFerti"
                            android:textColor="@color/textcolor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/textViewP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="@string/exppesti"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/p_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expPesti"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">
                <TextView
                    android:id="@+id/textViewHalfDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="@string/exphalfDay"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="@string/expnoWorker"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/half_no_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expnoWorker"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/textViewHS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="@string/expSal"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/half_sal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expSal"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">
                <TextView
                    android:id="@+id/textViewFullDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="@string/expfullDay"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewFu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="@string/expnoWorker"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/full_no_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expnoWorker"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/textViewFS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="@string/expSal"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/full_sal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expSal"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/textViewEx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="@string/expextra"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/extra_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expExtra"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/textViewExN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="Extra  Note:"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/extra_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expNote"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">
                <TextView
                    android:id="@+id/textViewTI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/infotext"
                    android:text="@string/exptotal"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/total_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expTotal"
                    android:textColor="@color/textcolor"/>
            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
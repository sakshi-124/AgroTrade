<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceOrder_Activity"
    android:background="@color/ferticardback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">


                <TextView
                    android:id="@+id/c_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XYZ"
                    android:layout_margin="@dimen/_3sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/infotext"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/caddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="@dimen/_3sdp"
                    android:textSize="@dimen/_15sdp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile: "
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:id="@+id/mob_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/editmob"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/infotext"/>
                </LinearLayout>
                <Button
                    android:id="@+id/change_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHANGE OR ADD ADDRESS"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Details"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/infotext"
                    android:layout_margin="@dimen/_3sdp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_detail"
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:id="@+id/order_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/infotext"
                        android:paddingLeft="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs."
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/infotext"
                        android:paddingLeft="@dimen/_5sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_charges"
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:id="@+id/delivery_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/infotext"
                        android:paddingLeft="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs."
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/infotext"
                        android:paddingLeft="@dimen/_5sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textSize="@dimen/_15sdp"/>
                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/infotext"
                        android:paddingLeft="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs."
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/infotext"
                        android:paddingLeft="@dimen/_5sdp"/>
                </LinearLayout>
            </LinearLayout>

</androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Options"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/infotext"
                android:layout_margin="@dimen/_3sdp"
                android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/radgrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@id/farmer"
            android:layout_gravity="center">
            <RadioButton
                android:id="@+id/cod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash on delivery"
                android:textColor="@color/signin"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"/>
            <RadioButton
                android:id="@+id/online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Online"
                android:textColor="@color/signin"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"/>
        </RadioGroup>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_3sdp">


            <Button
                android:id="@+id/continue_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp"
                android:width="@dimen/_100sdp"
                android:background="@drawable/btndraw"
                android:text="CONTINUE"
                android:textColor="@color/btntext" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
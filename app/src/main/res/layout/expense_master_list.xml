<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/ferticardback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crop_name"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/product_crop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mTotal"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/total_total_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mFerti"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/total_ferti_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mPesti"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/total_p_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mhalfno"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/total_half_no_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mFullDay"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/total_half_sal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mfullno"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/total_full_no_worker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mFullDay"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/total_full_sal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mExtra"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/total_extra_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mDate"
                android:textSize="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/expense_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:paddingLeft="@dimen/_5sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="Tomato"/>

        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>